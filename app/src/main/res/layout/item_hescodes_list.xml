<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    app:cardElevation="3dp"
    app:cardCornerRadius="3dp"
    app:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imView"
            android:src="@drawable/hes"/>

        <TextView
            android:id="@+id/txtNameCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="İSİM"
            android:textStyle="bold"
            android:textSize="22dp"
            android:layout_toRightOf="@+id/imView"
            android:layout_toEndOf="@+id/imView"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/txtHesCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HES KODU"
            android:layout_toRightOf="@+id/imView"
            android:layout_toEndOf="@+id/imView"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/txtNameCard" />

        <TextView
            android:id="@+id/txtQrCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="QR Kodu"
            android:layout_toRightOf="@+id/imView"
            android:layout_toEndOf="@+id/imView"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/txtHesCard"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/shareCardIcon"
            android:layout_below="@id/txtQrCard"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/imView"
            android:layout_marginTop="15dp"
            android:src="@drawable/share_yellow" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/goQRLinkCardIcon"
            android:layout_below="@id/txtQrCard"
            android:layout_marginLeft="75dp"
            android:layout_toRightOf="@+id/imView"
            android:layout_marginTop="15dp"
            android:src="@drawable/qr_code_blue" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/copyCardIcon"
            android:layout_below="@id/txtQrCard"
            android:layout_marginLeft="140dp"
            android:layout_toRightOf="@+id/imView"
            android:layout_marginTop="15dp"
            android:src="@drawable/copy_green" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/deleteCardIcon"
            android:layout_below="@id/txtQrCard"
            android:layout_marginLeft="205dp"
            android:layout_toRightOf="@+id/imView"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_baseline_delete_24" />



    </RelativeLayout>


    </androidx.cardview.widget.CardView>
